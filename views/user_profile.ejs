        <label style="color: black;" for="name">Name update</label>
        <input type="text" name="name" placeholder="Your name" value="<%=profile_user.name%>" required>
        <label style="color: black;" for="email">Email update</label>
        <input type="email" name="email" placeholder="Your email" value="<%=profile_user.email%>" required>
        <label style="color: black;" for="avatar">Profile update</label>
        <input type="file" name="avatar" placeholder="Upload Picture">
        <button style="margin-left: -50px;" type="submit">Update</button>
    </form>
